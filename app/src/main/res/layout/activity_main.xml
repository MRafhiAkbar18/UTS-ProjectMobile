<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundimage"
    tools:context=".MainActivity">


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="405dp"
        android:layout_height="340dp"
        android:layout_marginTop="15dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="5dp"
        tools:layout_editor_absoluteY="50dp">

        <LinearLayout
            android:id="@+id/lineone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="20dp">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:onClick="imageTapped"
                android:tag="0"
                app:srcCompat="@mipmap/ic_launcher" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:onClick="imageTapped"
                android:tag="1"
                app:srcCompat="@mipmap/ic_launcher" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:onClick="imageTapped"
                android:tag="2"
                app:srcCompat="@mipmap/ic_launcher" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linetwo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="20dp">

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:onClick="imageTapped"
                android:tag="3"
                app:srcCompat="@mipmap/ic_launcher" />

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:onClick="imageTapped"
                android:tag="4"
                app:srcCompat="@mipmap/ic_launcher" />

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:onClick="imageTapped"
                android:tag="5"
                app:srcCompat="@mipmap/ic_launcher" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linethree"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:onClick="imageTapped"
                android:tag="6"
                app:srcCompat="@mipmap/ic_launcher" />

            <ImageView
                android:id="@+id/imageView9"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:onClick="imageTapped"
                android:tag="7"
                app:srcCompat="@mipmap/ic_launcher" />

            <ImageView
                android:id="@+id/imageView10"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:onClick="imageTapped"
                android:tag="8"
                app:srcCompat="@mipmap/ic_launcher" />
        </LinearLayout>
    </LinearLayout>

    <TableLayout
        android:id="@+id/tbl1"
        android:layout_width="fill_parent"
        android:stretchColumns="0,1,2,3"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_below="@id/linearLayout"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="2dp"
        tools:layout_editor_absoluteY="455dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/change_text_button"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="20sp"
                android:layout_below="@+id/linearLayout"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="15sp"
                android:src="@drawable/spongebob"
                tools:layout_editor_absoluteX="28dp"
                tools:layout_editor_absoluteY="501dp" />

            <TextView
                android:id="@+id/text_to_change"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:text="0"
                android:layout_marginTop="50sp"
                android:layout_marginLeft="10sp"
                android:background="@android:color/holo_green_light"
                android:gravity="center"
                tools:layout_editor_absoluteX="226dp"
                tools:layout_editor_absoluteY="541dp" />

            <TextView
                android:id="@+id/text_to_change1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:text="0"
                android:layout_marginTop="50sp"
                android:layout_marginLeft="10sp"
                android:background="@android:color/holo_green_light"
                android:gravity="center"
                tools:layout_editor_absoluteX="152dp"
                tools:layout_editor_absoluteY="541dp" />

            <ImageButton
                android:id="@+id/change_text_button1"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_below="@+id/linearLayout"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="20sp"
                android:layout_marginRight="15sp"
                android:layout_marginBottom="15dp"
                android:src="@drawable/patrick"
                tools:layout_editor_absoluteX="285dp"
                tools:layout_editor_absoluteY="500dp" />


        </TableRow>
    </TableLayout>


    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tbl1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="86dp"
        android:onClick="playAgain"
        android:text="@string/button"
        tools:layout_editor_absoluteX="154dp"
        tools:layout_editor_absoluteY="667dp"
        tools:text="@string/button" />

    <EditText
        android:id="@+id/editText1"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/tbl1"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="21dp"
        android:layout_marginBottom="15dp"
        android:background="@android:color/holo_green_light"
        android:ems="10"
        android:fontFamily="monospace"
        android:gravity="center"
        android:inputType="textPersonName"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="285dp"
        tools:layout_editor_absoluteY="623dp" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/tbl1"
        android:layout_marginLeft="21sp"
        android:layout_marginTop="10dp"
        android:background="@android:color/holo_green_light"
        android:ems="10"
        android:fontFamily="monospace"
        android:gravity="center"
        android:inputType="textPersonName"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="34dp"
        tools:layout_editor_absoluteY="623dp" />


</RelativeLayout>